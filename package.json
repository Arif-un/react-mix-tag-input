{
  "private": false,
  "name": "@arif-un/react-mix-tag-input",
  "version": "1.0.10",
  "description": "A simple react component for inputting tags with a mix of text",
  "module": "dist/index.d.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "dev": "vite dev",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "build": "tsup",
    "lint:ts": "eslint ./src --ext .ts,.tsx --config .eslintrc --fix",
    "lint:styles": "stylelint \"**/*.css\" --fix",
    "lint": "npm-run-all lint:ts lint:styles",
    "format": "prettier --write .",
    "release": "semantic-release",
    "sb": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "e2e:ui": "pnpm exec playwright test --ui",
    "e2e": "pnpm exec playwright test"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "mix-tag-input",
    "react-input",
    "react-component",
    "html-input",
    "mention",
    "suggestion"
  ],
  "author": "Arif Uddin",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
